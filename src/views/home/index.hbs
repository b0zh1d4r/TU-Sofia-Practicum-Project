<header>
    <h1>Welcome to Zoodora</h1>
    <p class="subtitle">Your favorite online pet shop.</p>
</header>

<section class="hero">
    <div class="hero-content">
        <h2>Everything Your Pet Deserves</h2>
        <p>From nutritious food to fun toys and grooming accessories â€“ we've got it all!</p>
        <a href="/products" class="shop-btn">Shop Now</a>
    </div>
</section>

<section class="latest-products">
    <h2 class="section-title">Latest Products:</h2>
    <div class="product-list">
        {{#each latestProducts}}
        <div class="product-card">
            <img src="{{imageUrl}}" alt="{{name}}" />
            <h3>{{name}}</h3>
            <p class="price">${{price}}</p>
            <a href="/products/{{_id}}/details" class="btn">Read More</a>
        </div>
        {{else}}
        <h2 class="section-title">No Products Available yet.</h2>
        {{/each}}
    </div>
</section>